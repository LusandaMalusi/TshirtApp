<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TshirtApp.TshirtItemPage" Title="{Binding Name}">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Name" />
        <Entry Text="{Binding Name}" />
        
        <Label Text="Surname" />
        <Entry Text="{Binding Surname}" />

        <Label Text="Gender" />
        <Entry Text="{Binding Gender}" />

        <Label Text="Tshirtcolor" />
        <Entry Text="{Binding Tshirtcolor}" />

        <Label Text="Tshirtsize" />
        <Entry Text="{Binding Tshirtsize}" />

        <Label Text="Datetime" />
        <Entry Text="{Binding Datetime}" />

        <Label Text="Shippingadress" />
        <Entry Text="{Binding Shippingadress}" />


        <Button Text="Save" Clicked="OnSaveClicked" />
       
        <Button Text="Cancel" Clicked="OnCancelClicked" />
       
    </StackLayout>
</ContentPage>